<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal"
    android:background="@drawable/arround_search_listview_layout">

    <LinearLayout
        android:id="@+id/lineleft"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_weight="7"
        android:orientation="vertical">

        <TextView
            android:id="@+id/local_tv_up"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="bottom|left"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/local_tv_down_left"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="left|center_vertical"
                android:layout_weight="2"
                android:gravity="left|top"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/local_lv_down_right"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:gravity="left|top"
                android:maxLines="1"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <ImageButton
        android:id="@+id/local_lv_route"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_weight="0.8"
        android:background="@drawable/arround_search_listview_layout"
        android:padding="3dp"
        android:scaleType="centerInside"
        android:src="@mipmap/want_to_go" />
</LinearLayout>
