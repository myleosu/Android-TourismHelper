<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/neutral4">


    <Button
        android:id="@+id/button_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/toolbar"
        android:text="账号与安全"
        android:textSize="22sp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="41dp" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_wakeup_time"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:background="@drawable/toolbar"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintTop_toBottomOf="@+id/button_account"
        tools:layout_editor_absoluteX="8dp" />

    <TextView
        android:id="@+id/textView_wakeup_time_min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="12dp"
        android:text="分钟"
        android:textColor="#404040"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="@+id/toolbar_wakeup_time"
        app:layout_constraintTop_toTopOf="@+id/toolbar_wakeup_time" />

    <TextView
        android:id="@+id/textView_wakeup_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="12dp"
        android:text="时间提醒"
        android:textSize="22sp"
        android:textColor="#404040"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/toolbar_wakeup_time" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_wakeup_mile"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:background="@drawable/toolbar"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_wakeup_time"
        tools:layout_editor_absoluteX="8dp" />

    <TextView
        android:id="@+id/textView_wakeup_mile_mile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="12dp"
        android:text="公里"
        android:textColor="#404040"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="@+id/toolbar_wakeup_mile"
        app:layout_constraintTop_toTopOf="@+id/toolbar_wakeup_mile" />

    <TextView
        android:id="@+id/textView_wakeup_mile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="12dp"
        android:text="距离提醒"
        android:textSize="22sp"
        android:textColor="#404040"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/toolbar_wakeup_mile" />


    <EditText
        android:id="@+id/editText_time"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="12dp"
        android:background="@null"
        android:ems="10"
        android:gravity="center"
        android:inputType="number"
        android:text="10"
        android:textSize="22sp"
        app:layout_constraintEnd_toStartOf="@+id/textView_wakeup_time_min"
        app:layout_constraintTop_toTopOf="@+id/toolbar_wakeup_time" />

    <EditText
        android:id="@+id/editText_mile"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="12dp"
        android:background="@null"
        android:ems="10"
        android:gravity="center"
        android:inputType="number"
        android:text="10"
        android:textSize="22sp"
        app:layout_constraintEnd_toStartOf="@+id/textView_wakeup_mile_mile"
        app:layout_constraintTop_toTopOf="@+id/toolbar_wakeup_mile" />

    <Button
        android:id="@+id/button_about"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:background="@drawable/toolbar"
        android:text="about"
        android:textSize="22sp"
        android:gravity="left|center_vertical"
        android:paddingLeft="10dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_wakeup_mile"
        tools:layout_editor_absoluteX="0dp" />


</android.support.constraint.ConstraintLayout>