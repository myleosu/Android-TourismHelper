<!--设置返回键的点击效果-->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <corners android:bottomLeftRadius="20dp" android:bottomRightRadius="0dp"
                android:topRightRadius="0dp" android:topLeftRadius="20dp"/>
            <!--设置填充色-->
            <solid android:color="#C0C0C0"/>
        </shape>
    </item>
    <item>
        <shape android:background="#00000000">
            <corners android:bottomLeftRadius="17dp" android:bottomRightRadius="0dp"
                android:topRightRadius="0dp" android:topLeftRadius="17dp"/>
            <!--设置填充色-->
            <solid android:color="#FFFFFF"/>
        </shape>
    </item>
</selector>