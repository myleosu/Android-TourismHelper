<?xml version="1.0" encoding="utf-8"?>
<!--注册界面布局-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/register_user_big_imge"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/user_big"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:inputType="textPersonName"
        android:hint="请设置您的用户名"
        android:id="@+id/register_username_edit"
        android:layout_below="@+id/register_user_big_imge"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        />

    <EditText
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:inputType="textPassword"
        android:ems="10"
        android:hint="请输入您的密码"
        android:id="@+id/register_password_edit"
        android:layout_below="@+id/register_username_edit"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <EditText
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:inputType="textPassword"
        android:ems="10"
        android:hint="请再次输入您的密码"
        android:id="@+id/register_password_edit_again"
        android:layout_below="@+id/register_password_edit"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <Button
        android:id="@+id/register_button_on_register"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_selector"
        android:text="确定注册"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/register_password_edit_again"
        android:layout_centerHorizontal="true" />
</RelativeLayout>